<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/outputTv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text=""
        android:textColor="@color/md_white_1000"
        android:textSize="45sp" />
    <TextView
        android:id="@+id/outputTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/md_white_1000"
        android:layout_above="@id/parent"
        android:textSize="60sp"
        android:gravity="end"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="0"/>

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/child1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/c"
                android:text="c"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"
                android:visibility="invisible"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/ac"
                android:text="ac"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/divide"
                android:text="/"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:textFontWeight="45"
                android:layout_margin="8dp"
                android:id="@+id/arrow"
                android:text="â‡—"
                android:textSize="20dp"
                app:backgroundTint="#57584f"
                android:textColor="@color/md_deep_orange_600"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/seven"
                android:text="7"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/eight"
                android:text="8"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/nine"
                android:text="9"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:textFontWeight="45"
                android:layout_margin="8dp"
                android:id="@+id/mult"
                android:text="*"
                android:textSize="20dp"
                app:backgroundTint="#57584f"
                android:textColor="@color/md_deep_orange_600"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/four"
                android:text="4"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/five"
                android:text="5"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/six"
                android:text="6"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:textFontWeight="45"
                android:layout_margin="8dp"
                android:id="@+id/minus"
                android:text="-"
                android:textSize="20dp"
                app:backgroundTint="#57584f"
                android:textColor="@color/md_deep_orange_600"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/one"
                android:text="1"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/two"
                android:text="2"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/three"
                android:text="3"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:textFontWeight="45"
                android:layout_margin="8dp"
                android:id="@+id/plus"
                android:text="+"
                android:textSize="20dp"
                app:backgroundTint="#57584f"
                android:textColor="@color/md_deep_orange_600"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/none"
                android:visibility="invisible"
                android:text="c"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/zero"
                android:text="0"
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_margin="8dp"
                android:id="@+id/dot"
                android:text="."
                android:backgroundTint="#57584f"
                android:textColor="@color/white"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
            <com.google.android.material.button.MaterialButton
                android:textFontWeight="45"
                android:layout_margin="8dp"
                android:id="@+id/equals"
                android:text="="
                android:textSize="20dp"
                app:backgroundTint="#57584f"
                android:textColor="@color/md_deep_orange_600"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:cornerRadius="45dp"/>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>